@page
@model Sheta.Web.Pages.Admin.PostOrder.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

    <div class="main-content" id="panel">
        @await Component.InvokeAsync("NavbarGroupViewModel")
        <!-- Header -->
        <hr />
        <div class="container-fluid mt--6">
            <!-- Dark table -->
            <div class="row">
                <div class="col">
                    <div class="card bg-default shadow">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="text-white mb-0">لیست فاکتور های پستی</h3>
                            <a href="/admin/postorder/SeccessPostOrder"class="btn btn-info">فاکتور های ارسال شده</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-items-center table-dark table-flush">
                                <thead class="thead-dark" style="font-size: medium!important;">
                                    <tr>
                                        <th scope="col" class="sort" data-sort="name">نام کاربری</th>
                                        <th scope="col" class="sort" data-sort="budget">شماره فاکتور</th>
                                        <th scope="col" class="sort" data-sort="status">کد پستی</th>
                                        <th scope="col" class="sort" data-sort="status">وضعیت پرداخت</th>
                                        <th scope="col" class="sort" data-sort="completion">دستورات</th>
                                    </tr>
                                </thead>
                                <tbody class="list">

                                    @foreach (var post in Model.PostOrdersDto.OrderPosts)
                                    {
                                        <tr>
                                            <td>@post.Orders.User.UserName</td>
                                            <td>@post.Orders.OrderId</td>
                                            <td>@post.Address.CodePosty</td>
                                            <td>@post.OrderPostType.TypeTitle</td>
                                            <td>
                                                <form action="/UserPanel/SuccessPostOrder/@post.OrderPostId" method="post">
                                                    
                                                    <a href="/Admin/PostOrder/Detailpost/@post.OrderPostId" class="btn btn-primary btn-sm">
                                                        جزیئیات
                                                    </a>

                                                    <input type="hidden" name="@post.OrderPostId" value="@post.OrderPostId"/>
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        ارسال شد
                                                    </button>
                                                </form>
                                                
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>

                        <div class="card-footer py-4 shadow" style="background-color: #263238;">
                            <nav aria-label="...">
                                <ul class="pagination justify-content-end mb-0">

                                    @for (int i = 1; i <= Model.PostOrdersDto.PageCount; i++)
                                    {
                                        <li class="page-item  @((i==Model.PostOrdersDto.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                            <a class="page-link" href="/Admin/postorder?PageId=@i">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

