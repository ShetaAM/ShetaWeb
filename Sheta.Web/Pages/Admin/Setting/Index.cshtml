@page
@model Sheta.Web.Pages.Admin.Setting.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

    <div class="main-content" id="panel">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-user">
                    <div class="card-header">
                        <h5 class="card-title" style="font-size: 25px;">ویرایش تنظیمات</h5>
                    </div>
                    <div class="card-body" style="float: right !important;">

                        <form method="post">
                            <input type="hidden" asp-for="Setting.SettingId" />
                            <div class="row">

                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">نام سایت</label>
                                        <input type="text" asp-for="Setting.SiteName" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="control-label" for="UserName">سایت فعال باشد؟</label>
                                        <select class="form-control" asp-for="Setting.SiteIsActive">
                                            <option value="True">بله</option>
                                            <option value="False">خیر</option>
                                        </select>
                                        <span class="text-danger field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">متن سایت غیرفعال</label>
                                        <textarea asp-for="Setting.NotActiveMassage" class="form-control"></textarea>
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">تگ ها</label>
                                        <textarea asp-for="Setting.TagName" class="form-control"></textarea>
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <hr />
                                <div class="col-md-12 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">درباره ما</label>
                                        <textarea asp-for="Setting.AboutUs" class="form-control"></textarea>
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">ایمیل</label>
                                        <input asp-for="Setting.Email" class="form-control" />
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">شماره تماس اول</label>
                                        <input asp-for="Setting.FirstNumber" class="form-control" />
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">شماره تماس دوم</label>
                                        <input asp-for="Setting.SecoundNumber" class="form-control" />
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">هزینه پست</label>
                                        <input asp-for="Setting.PostMoney" class="form-control" />
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 pl-1">
                                    <div class="form-group">
                                        <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" style="width: 100%;" />
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
<script>

    CKEDITOR.replace('Setting_AboutUs', {
        customConfig: '/AdminContent/js/config.js'
    });

</script>


