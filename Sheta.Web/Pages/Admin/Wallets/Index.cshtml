@page "{id}"
@model Sheta.Web.Pages.Admin.Wallets.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

    <div class="main-content" id="panel">
        @await Component.InvokeAsync("NavbarGroupViewModel")
        <!-- Header -->
        <hr />
        <div class="container-fluid mt--6">
            <!-- Dark table -->
            <div class="row">
                <div class="col">
                    <div class="card bg-default shadow">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="text-white mb-0">کیف پول کاربر</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-items-center table-dark table-flush">
                                <thead class="thead-dark" style="font-size: medium!important;">
                                    <tr>
                                        <th scope="col" class="sort" data-sort="name">کد تراکنش</th>
                                        <th scope="col" class="sort" data-sort="budget">مبلغ</th>
                                        <th scope="col" class="sort" data-sort="status">نوع تراکش</th>
                                        <th scope="col" class="sort" data-sort="status">نتیجه تراکنش</th>
                                        <th scope="col" class="sort" data-sort="status">تاریخ تراکنش</th>
                                        <th scope="col" class="sort" data-sort="budget">توضیحات</th>
                                    </tr>
                                </thead>
                                <tbody class="list">

                                    @foreach (var user in Model.wallets)
                                    {
                                        <tr>
                                            <td>@user.WalletId</td>
                                            <td>@user.Amount</td>
                                            <td>
                                                @if (user.TypeId == 1)
                                                {
                                                    <span class="badge badge-dot mr-4">
                                                        <i class="bg-success"></i>
                                                        <span class="text-success">واریز</span>
                                                    </span>

                                                }
                                                @if (user.TypeId == 2)
                                                {
                                                    <span class="badge badge-dot mr-4">
                                                        <i class="bg-danger"></i>
                                                        <span class="text-danger">برداشت</span>
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.IsPay)
                                                {
                                                    <span class="badge badge-dot mr-4">
                                                        <i class="bg-success"></i>
                                                        <span class="text-success">موفق</span>
                                                    </span>

                                                }
                                                else
                                                {
                                                    <span class="badge badge-dot mr-4">
                                                        <i class="bg-danger"></i>
                                                        <span class="text-danger">ناموفق</span>
                                                    </span>
                                                }
                                            </td>
                                            <td>@user.CreateDate</td>
                                            <td>@user.Description</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer py-4 shadow" style="        background-color: #263238;">
                            <nav aria-label="...">
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
