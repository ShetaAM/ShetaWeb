@page "{id}"
@model Sheta.Web.Pages.Admin.User.DeleteUserModel
@{
    ViewData["Title"] = "حذف کاربر";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

<div class="main-content" id="panel">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-user">
                <div class="card-header">
                    <form method="post">
                        <input type="hidden" name="UserId" value="@ViewData["UserId"].ToString()" />
                        <dl class="dl-horizontal">
                            <dt>نام کاربری : </dt>
                            <dd>@Model.InformationUserViewModel.UserName</dd>
                            <dt>ایمیل : </dt>
                            <dd>@Model.InformationUserViewModel.Email</dd>
                            <dt>موجودی کیف پول : </dt>
                            <dd>@Model.InformationUserViewModel.Wallet</dd>
                            <dt>تاریخ عضویت : </dt>
                            <dd>@Model.InformationUserViewModel.RegisterDate</dd>
                            <dt></dt>
                            <dd>
                                <input type="submit" value="حذف" class="btn btn-danger" />
                            </dd>
                        </dl>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
