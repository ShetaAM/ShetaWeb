@page "{id}"
@using System.Linq
@using Sheta.Data.Models.Entities.User
@model Sheta.Web.Pages.Admin.User.EditUserModel
@{
    ViewData["Title"] = "افزودن کاربر";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";

}

<div class="main-content" id="panel">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-user">
                <div class="card-header">
                    <h5 class="card-title" style="font-size: 25px;">ویرایش کاربر </h5>
                </div>
                <div class="card-body" style="float: right !important;">

                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="User.UserId" />
                        <input type="hidden" asp-for="User.Password" />
                        <input type="hidden" asp-for="User.UserAvatar"/>
                        <input type="hidden" asp-for="User.ActiveCode"/>
                        <input type="hidden" asp-for="User.IsActive"/>
                        <input type="hidden" asp-for="User.RegisterDate"/>
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    <label class="control-label" for="UserName">نام کاربری</label>
                                    <input type="text" asp-for="User.UserName" class="form-control">
                                    <span class="text-danger field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="col-md-6 px-1">
                                <div class="form-group">
                                    <label class="control-label" for="Email">ایمیل</label>
                                    <input type="text" asp-for="User.Email" class="form-control">
                                    <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    <label class="control-label" for="UserName">کلمه عبور</label>
                                    <p class="text-info">اگر پسوردی وارد کنید اعمال میشود</p>
                                    <input type="password" name="password" class="form-control">
                                    <span class="text-danger field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="col-md-3 pr-1">
                                @{
                                    List<Role> roles = ViewData["Roles"] as List<Role>;
                                    List<int> SelectedRole = ViewData["SelectedRoles"] as List<int>;
                                }
                                <ul>
                                    @foreach (var role in roles)
                                    {
                                    <li>
                                        @*<input type="checkbox" name="SelectedRoles" value="@item.RoleId" @((Model.EditUserViewModel.UserRoles.Any(r => r == item.RoleId) ? "checked" : ""))>@item.RoleTitle*@
                                        <input type="checkbox" name="SelectedRoles" @((SelectedRole.Any(p => p == role.RoleId) ? "checked" : "")) value="@role.RoleId" /> @role.RoleTitle

                                    </li>
                                    }
                                </ul>

                            </div>
                            
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <input type="submit" value="ویرایش اطلاعات" class="btn btn-success" style="width: 100%;" />
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


