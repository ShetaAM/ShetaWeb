@page
@model Sheta.Web.Pages.Admin.ContactUs.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}


    <div class="main-content" id="panel">
        @await Component.InvokeAsync("NavbarGroupViewModel")
        <hr />
        <div class="container-fluid mt--6">
            <!-- Dark table -->
            <div class="row">
                <div class="col">
                    <div class="card bg-default shadow">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="text-white mb-0">لیست تماس ها</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-items-center table-dark table-flush">
                                <thead class="thead-dark" style="font-size: medium!important;">
                                    <tr>
                                        <th scope="col" class="sort" data-sort="budget">نام</th>
                                        <th scope="col" class="sort" datatamas-sort="status">ایمیل</th>
                                        <th scope="col" class="sort" data-sort="status">موبایل</th>
                                        <th scope="col" class="sort" data-sort="status">دستورات</th>
                                    </tr>
                                </thead>
                                <tbody class="list">

                                    @foreach (var Tamas in Model.ViewModel.ContactUses)
                                    {
                                        <tr>
                                            <td>@Tamas.name</td>
                                            <td>@Tamas.Email</td>
                                            <td>@Tamas.Phone</td>
                                            <td>
                                                <a asp-page="detailcontactus" asp-route-id="@Tamas.TamasId" class="btn btn-warning btn-sm">
                                                    نمایش پیام
                                                </a>
                                                <a asp-page="deletecontactus" asp-route-id="@Tamas.TamasId" class="btn btn-danger btn-sm">
                                                    حذف
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>

                        <div class="card-footer py-4 shadow" style="        background-color: #263238;">
                            <nav aria-label="...">
                                <ul class="pagination justify-content-end mb-0">

                                    @for (int i = 1; i <= Model.ViewModel.PageCount; i++)
                                    {
                                        <li class="page-item  @((i==Model.ViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                            <a class="page-link" href="/Admin/tamasha?PageId=@i">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

