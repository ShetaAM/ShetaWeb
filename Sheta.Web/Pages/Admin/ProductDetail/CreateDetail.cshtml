@page "{id}"
@model Sheta.Web.Pages.Admin.ProductDetail.CreateDetailModel
@{
    ViewData["Title"] = "CreateDetail";
}




<div class="main-content" id="panel">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-user">
                <div class="card-header">
                    <h5 class="card-title" style="font-size: 25px;">افزودن مشخصه جدید</h5>
                </div>
                <div class="card-body" style="float: right !important;">

                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="PCode" />
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    <label>عنوان مشخصه</label>
                                    <input type="text" asp-for="ProductDetail.DetailCaption" class="form-control">
                                    <span asp-validation-for="ProductDetail.DetailCaption"></span>
                                </div>
                            </div>
                            <div class="col-md-6 px-1">
                                <div class="form-group">
                                    <label>مقدار مشخصه</label>
                                    <input type="text" asp-for="ProductDetail.DetailDec" class="form-control">
                                    <span asp-validation-for="ProductDetail.DetailDec"></span>
                                </div>
                                @*<div class="form-group">
                                        <label>عنوان مشخصه</label>
                                        <input type="text" asp-for="ProductDetail.ProductId" class="form-control">
                                        <span asp-validation-for="ProductDetail.DetailCaption"></span>
                                    </div>*@
                            </div>
                            <div class="col-md-12 pr-1">
                                <div class="form-group">
                                    <input type="submit" value="افزودن" class="btn btn-success" style="width: 100%;" />
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

