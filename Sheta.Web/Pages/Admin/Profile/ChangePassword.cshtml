@page
@model Sheta.Web.Pages.Admin.Profile.ChangePasswordModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

    <div class="main-content" id="panel">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-user">
                    <div class="card-header">
                        <h5 class="card-title" style="font-size: 25px;">تغییر کلمه عبور</h5>
                    </div>
                    <div class="card-body" style="float: right !important;">

                        <form method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-12 pr-1">
                                    <div class="form-group">
                                        <label class="control-label" for="UserName">کلمه عبور فعلی </label>
                                        <input type="password" asp-for="PasswordViewModel.OldPassword" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">کلمه عبور جدید</label>
                                        <input type="password" asp-for="PasswordViewModel.NewPassword" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">تکرار کلمه عبور جدید</label>
                                        <input type="password" asp-for="PasswordViewModel.ReNewPassword" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 pl-1">
                                    <div class="form-group">
                                        <input type="submit" value="تغییر کلمه عبور" class="btn btn-success" style="width: 100%;" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

