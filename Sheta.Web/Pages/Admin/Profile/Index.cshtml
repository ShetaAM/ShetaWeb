@page
@model Sheta.Web.Pages.Admin.Profile.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

    <div class="main-content" id="panel">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-user">
                    <div class="card-header">
                        <h5 class="card-title" style="font-size: 25px;">ویرایش پروفایل</h5>
                    </div>
                    <div class="card-body" style="float: right !important;">

                        <form method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="user.UserId" />
                            <input type="hidden" asp-for="user.Password" />
                            <input type="hidden" asp-for="user.ActiveCode" />
                            <input type="hidden" asp-for="user.UserAvatar" />
                            <input type="hidden" asp-for="user.isdelete" />
                            <input type="hidden" asp-for="user.IsActive" />
                            <input type="hidden" asp-for="user.RegisterDate" />
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="control-label" for="UserName">نام کاربری </label>
                                        <input type="text" asp-for="user.UserName" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">ایمیل</label>
                                        <input type="text" asp-for="user.Email" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 pl-1">
                                    <div class="form-group">
                                        <input type="submit" value="ویرایش اطلاعات" class="btn btn-success" style="width: 100%;" />
                                    </div>
                                </div>
                                <a asp-page="ChangePassword" class="btn btn-dark">تغییر کلمه عبور</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

