<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description"
          content="Start your development with a Dashboard for Bootstrap 4." />
    <meta name="author" content="Creative Tim" />
    <title>Sheta-کنترل پنل</title>
    <!-- Favicon -->
    <link rel="icon" href="/AdminContent/img/brand/favicon.png" type="image/png" />
    <!-- Fonts -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" />
    <!-- Icons -->
    <link rel="stylesheet"
          href="/AdminContent/vendor/nucleo/css/nucleo.css"
          type="text/css" />
    <link rel="stylesheet"
          href="/AdminContent/vendor/!fortawesome/fontawesome-free/css/all.min.css"
          type="text/css" />
    <!-- Page plugins -->
    <!-- Argon CSS -->
    <link rel="stylesheet"
          href="/AdminContent/css/argon.css?v=1.2.0"
          type="text/css" />
</head>

<body class="bg-gradient-primary">
    <!-- Navbar -->
    <nav id="navbar-main" class="navbar navbar-horizontal navbar-transparent navbar-main navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="dashboard.html">
                <img src="/AdminContent/img/brand/blue2.png">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse navbar-custom-collapse collapse" id="navbar-collapse">
                <div class="navbar-collapse-header">
                    <div class="row">
                        <div class="col-6 collapse-brand">
                            <a href="dashboard.html">
                                <img src="/AdminContent/img/brand/blue.png">
                            </a>
                        </div>
                        <div class="col-6 collapse-close">
                            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                                <span></span>
                                <span></span>
                            </button>
                        </div>
                    </div>
                </div>
                <hr class="d-lg-none" />
                <ul class="navbar-nav align-items-lg-center ml-lg-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-link-icon" href="https://www.instagram.com/amirmsheta" target="_blank" data-toggle="tooltip" data-original-title="پیچ اینستاگرام">
                            <i class="fab fa-instagram"></i>
                            <span class="nav-link-inner--text d-lg-none">Instagram</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-icon" href="https://t.me/amirmsheta" target="_blank" data-toggle="tooltip" data-original-title="ارتباط با من در تلگرام">
                            <i class="fab fa-telegram"></i>
                            <span class="nav-link-inner--text d-lg-none">telegram</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-icon" href="https://github.com/ShetaAm" target="_blank" data-toggle="tooltip" data-original-title="گیت هاب">
                            <i class="fab fa-github"></i>
                            <span class="nav-link-inner--text d-lg-none">Github</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Main content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header bg-gradient-primary py-7 py-lg-8 pt-lg-9">
            <div class="container mt--8 pb-5">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-7">
                        <div class="card bg-secondary border-0 mb-0">

                            <div class="card-body px-lg-5 py-lg-5">
                                <form role="form" method="post">
                                    <div class="form-group mb-3">
                                        <div class="input-group input-group-merge input-group-alternative">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                            </div>
                                            <input class="form-control" asp-for="LoginViewModel.Email" placeholder="ایمیل" type="email">
                                            <span asp-validation-for="LoginViewModel.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group input-group-merge input-group-alternative">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                            </div>
                                            <input class="form-control" asp-for="LoginViewModel.Password" placeholder="کلمه عبور" type="password">
                                            <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="custom-control custom-control-alternative custom-checkbox">
                                        <input asp-for="LoginViewModel.RememberMe" class="custom-control-input" id=" customCheckLogin" type="checkbox">
                                        <label class="custom-control-label" for=" customCheckLogin">
                                            <span class="text-black-50">مرا به یاد بسپار</span>
                                        </label>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary my-4">ورود به کنترل پنل</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12" style="direction: ltr;">
                                <a href="/forgetpassword" class="text-light"><small>رمز عبور خود را فراموش کرده اید؟</small></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="container">
            <div class="row align-items-center justify-content-xl-between">
                <div class="col-xl-12">
                    <div class="copyright text-center text-xl-left text-muted" style="color: white;">
                        &copy; 2020 <a href="https://www.creative-tim.com" class="font-weight-bold ml-1" target="_blank" style="color: white;">Sheta</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="/AdminContent/vendor/jquery/dist/jquery.min.js"></script>
    <script src="/AdminContent/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/AdminContent/vendor/js-cookie/js.cookie.js"></script>
    <script src="/AdminContent/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="/AdminContent/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
    <!-- Optional JS -->
    <!-- Argon JS -->
    <script src="/AdminContent/js/argon.js?v=1.2.0"></script>
</body>

</html>