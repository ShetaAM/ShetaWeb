@model Sheta.CoreLayer.DTOs.ForgetViewModel

@{
    ViewData["Title"] = "ForgetPass";
}


@if (ViewBag.success!=null)
{
    <div class="alert-success">
        <h5>ایمیل بازیابی کلمه عبور برای شمار ارسال شد</h5>
    </div>
}

<div class="row form">
    <div class="col-md-3"></div>
    <div class="col-md-6 formbox">
        <h1 class="center">بازیابی حساب</h1>
        <form asp-action="ForgetPass">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="بازیابی رمز عبور" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>

</div>


