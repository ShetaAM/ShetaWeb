@model Sheta.CoreLayer.DTOs.ResetViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

<h1>ResetPass</h1>

<hr />

<div class="row form">
    <div class="col-md-3"></div>
    <div class="col-md-6 formbox">
        <h1 class="center">تغییر کلمه عبور</h1>
        <form asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Password" class="form-control"placeholder="کلمه عبور حدید" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="RePassword" class="form-control" placeholder="تکرار کلمه عبور حدید" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="تغییر کلمه عبور" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

