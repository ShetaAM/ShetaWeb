@using Sheta.CoreLayer.Servises.Interface
@model List<Sheta.Data.Models.Entities.Order.OrderDetail>;
@{
    ViewData["Title"] = "SuratHesab";
    Layout = "~/Views/Shared/_UserPanel.cshtml";
}
@inject IOrderService _OrderService;
<nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
    <div class="container-fluid">
        <div class="navbar-wrapper">
            <a class="navbar-brand" href="/panel">پنل کاربری</a>
        </div>

    </div>
</nav>
<!-- End Navbar -->
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> سبد خرید شما</h4>
                </div>
                <div class="card-body">
                    <div>
                        <table class="table" style="text-align: right !important;">
                            <thead class=" text-primary">
                                <tr>
                                    <th>محصول</th>
                                    <th>تعداد</th>
                                    <th>قیمت</th>
                                    <th>جمع</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@_OrderService.GetProductTitleById(item.ProductId)</td>
                                        <td>
                                            @item.Count
                                        </td>
                                        <td>
                                            @item.Price
                                        </td>
                                        <td>
                                            @((item.Count * item.Price).ToString("#,0"))
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

