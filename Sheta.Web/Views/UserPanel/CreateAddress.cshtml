@model Sheta.Data.Models.Entities.Site.Address;
@{
    ViewData["Title"] = "CreateAddress";
    Layout = "~/Views/Shared/_UserPanel.cshtml";
}



<nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
    <div class="container-fluid">
        <div class="navbar-wrapper">
            <a class="navbar-brand" href="/panel">پنل کاربری</a>
        </div>

    </div>
</nav>
<!-- End Navbar -->
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-user">
                <div class="card-header">
                    <h5 class="card-title">افزودن آدرس</h5>
                </div>
                <div class="card-body" style="float: right!important;">
                    <form asp-action="CreateAddress" method="post">
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Ostan" placeholder="استان" class="form-control"required="" />
                                    <span asp-validation-for="Ostan" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 px-1">
                                <div class="form-group">
                                    <input asp-for="Shahrestan" placeholder="شهرستان" class="form-control"required="" />
                                    <span asp-validation-for="Shahrestan" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <input asp-for="City" placeholder="شهر" class="form-control" required=""/>
                                    <span asp-validation-for="City" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <input asp-for="CodePosty" placeholder="کد پستی" class="form-control"required="" />
                                    <span asp-validation-for="CodePosty" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <textarea asp-for="Adres" placeholder="آدرس دقیق" class="form-control" required=""></textarea>
                                    <span asp-validation-for="Adres" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <input style="font-family: 'yekan'; width: 100%;" type="submit" value="افزودن" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

